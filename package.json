{
  "name": "cinema-tickets-javascript",
  "description": "This is a coding exercise which will allow you to demonstrate how you code and your approach to a given problem.",
  "version": "1.0.1",
  "engines": {
    "node": ">=20.9.0"
  },
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest --passWithNoTests",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watchAll",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testPathPatterns=integration --passWithNoTests",
    "lint": "eslint --ignore-path .gitignore \"{src,test}/**/*.js\"",
    "lint:fix": "eslint --ignore-path .gitignore \"{src,test}/**/*.js\" --fix",
    "security:check": "echo \"Checking for security vulnerabilities...\" && npm audit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"Analysing your code...\" && npm run lint && npm test"
    }
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "eslint": "8.53.0",
    "husky": "^4.3.8",
    "jest": "29.7.0"
  }
}